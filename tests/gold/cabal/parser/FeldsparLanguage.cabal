test-suite range
  type: exitcode-stdio-1.0

  hs-source-dirs: tests

  main-is: RangeTest.hs

  other-modules:
    Feldspar.Range.Test

  default-language: Haskell2010

  build-depends:
    feldspar-language,
    base,
    random           >= 1   && < 2,
    QuickCheck       >= 2.7 && < 3,
    tasty            >= 0.3,
    tasty-quickcheck >= 0.2

